#!/bin/bash

CONFIG_CPP_FILE=./src/resources/Config.cpp
VERSION_BUILD_PREFIX="#define VERSION_BUILD "
VERSION_MAJOR_PREFIX="#define VERSION_MAJOR "

VERSION_BUILD=$(grep "^""${VERSION_BUILD_PREFIX}" ${CONFIG_CPP_FILE})
VERSION_BUILD=${VERSION_BUILD/#$VERSION_BUILD_PREFIX}

VERSION_MAJOR=$(grep "^""${VERSION_MAJOR_PREFIX}" ${CONFIG_CPP_FILE})
VERSION_MAJOR=${VERSION_MAJOR/#$VERSION_MAJOR_PREFIX}

VERSION="v${VERSION_MAJOR}-${VERSION_BUILD}"

echo "${VERSION}"